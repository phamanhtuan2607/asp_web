     <style>
        .chat-facebook {
            position: fixed; /* Định vị cố định */
            bottom: 20px;    /* Cách phía dưới của trang 20px */
            right: 20px;     /* Cách phía phải của trang 20px */
            z-index: 1000;   /* Đảm bảo luôn hiển thị trên các phần tử khác */
        }

        .chat-facebook img {
            width: 60px;     /* Tăng kích thước biểu tượng */
            height: 60px;
            cursor: pointer; /* Thêm con trỏ pointer khi hover */
        }

        /* Hiệu ứng khi di chuột vào biểu tượng */
        .chat-facebook img:hover {
            transform: scale(1.1);  /* Phóng to nhẹ khi hover */
            transition: transform 0.3s ease-in-out; /* Hiệu ứng chuyển động mượt */
        }
    </style>
    
    <div class="chat-facebook">
        <a href="https://www.facebook.com/"><img title="Chat Facebook" src="https://img.icons8.com/color/48/000000/facebook-new.png" alt="facebook-icon" width="40" height="40"/></a
    </div>
     <!-- Facebook Chat Plugin -->
    <div id="fb-root"></div>
   <div class="fb-customerchat"
     attribution="setup_tool"
     page_id="chimsedinangaoe"
     theme_color="#0084ff"
     logged_in_greeting="Xin chào! Chúng tôi có thể giúp gì cho bạn?"
     logged_out_greeting="Xin chào! Đăng nhập để trò chuyện với chúng tôi!">
</div>

    <!-- Load Facebook SDK for JavaScript -->
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          xfbml            : true,
          version          : 'v16.0'
        });
      };

      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

      // Toggle Chat Plugin visibility
      function toggleChat() {
        var chatbox = document.querySelector(".fb-customerchat");
        if (chatbox.style.display === "none" || chatbox.style.display === "") {
          chatbox.style.display = "block";  // Hiện ô chat
        } else {
          chatbox.style.display = "none";   // Ẩn ô chat
        }
      }
    </script>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
